<html lang="en">
   <body>
       <h1 style="border: 1px solid black; text-align: center;width: 30%;margin:auto">Users</h1>
       <% users.forEach( user => {%>
         <div style="border: 1px solid black; text-align: center;width: 30%;margin:auto">
             <h2><%= user._id %></h2>
             <h2><%= user.username %></h2>
             <!-- <img src="../app/jchy.jpeg" alt="" width="100px"> -->
             <p><%= user.email %></p>
             <p><%= user.followers %></p>
             <a href="/users/<%=user._id%>">Details</a>
         </div>
      <% }) %>

      <%- include("./components/footer.ejs") %>

      <!-- <form action="/users" method="post"></form> -->
   </body>
</html>